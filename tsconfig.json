{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "module": "ESNext",
    "target": "ES2019",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
